@model StudentSite.Models.Login;
@{
    ViewData["Title"] = "Вход в учётную запись";
}

<div class="text-center">
    <h1>Вход в аккаунт!</h1>
</div>
<div class="text-center m-2">
    <h5>Он необходим для возможности записи домашнего задания, добавления новых материалов, их просмотра и скачивания.</h5>
</div>
<div id="login-form">
    <form autocomplete="on" method="post" asp-controller="Profile" asp-action="Index">
        <div asp-validation-summary="All" style="font-size:18px; margin: 10px auto; width: 300px;" class="text-danger"></div>
        <div class="form-group vw-80" id="login-form-login">
            <label for="inputlogin1" class="form-label" >Логин</label>
            <input id="inputlogin1" asp-for="Name" placeholder="Логин" class="form-control textbox-dg font-weight-bold text-center" type="text">
            <div class="form-text">Длина логина должна быть от 3 до 20 символов.</div>
        </div>
        <div class="form-group w-50" id="login-form-password">
            <label for="inputlogin2" class="form-label" >Пароль</label>
            <input id="inputlogin2" autocomplete="new-password" asp-for="Password" placeholder="Пароль" class="form-control textbox-dg font-weight-bold text-center" type="password">
            </div>
            <div id="login-form-btn" class="text-center">
                <button class="btn btn-success">Войти</button>
            </div>
    </form>
</div>


